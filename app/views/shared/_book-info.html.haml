.review-info-box
  .row.col-12.col-md-10.p-0.review-info-box__body
    .review-info-box__body--left.col-5.col-sm-3.mx-auto
      - if review.book.image_url.present?
        = image_tag review.book.image_url, alt: "書影", class: "img-fluid"
      - else
        = image_tag asset_path("no_image.jpg"), class: "img-fluid"
    .review-info-box__body--right.col-12.col-sm-9
      .right__label.my-2
        読んだ本
      .right__title.small
        = "タイトル：  #{review.book.title}"
      .right__author.small
        = "著者：  #{review.book.author}"
      .right__badges
        = link_to "この本に関する投稿を見る", book_path(review.book), class: "badge badge-info"
        = link_to "この本を登録する", new_review_path(title: review.book.title, author: review.book.author,
                                image_url: review.book.image_url, url: review.book.url, isbn: review.book.isbn),
                                class: "badge badge-info"

.sidebar-others.col-6.col-sm-4.col-md-3.mx-auto.order-sm-1.mt-3.mt-sm-0.px-0
  .sidebar-others__profile.panel.card
    .sidebar-others__profile--avatar.text-center.py-3.bg-light
      = image_tag @user.avatar.url, size: "100x100", alt: current_user.avatar, id: "avatar"
    .sidebar-others__profile--name.small.text-center.pb-2.bg-light
      = "#{@user.nickname} さん"
    .sidebar-others__profile--name.small.text-center
      = link_to reading_user_path(current_user), class: "nav-link mr-2" do
        .fas.fa-user-circle
        マイページへ戻る
